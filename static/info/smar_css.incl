body {
margin: 40px;
font-size: small;
font-family: georgia, times, serif;
}

#content {
width: 700px;
}



p { text-align: justify; line-height: 1.2em; }

ul { width: 500px;  }
li { padding-bottom: 0.5em; line-height: 1.1em; list-style-type: circle;   }

h1 {
margin: 30px 0;
padding: 10px 0;
width: 700px;
border-bottom: 3px solid #333;
text-transform: uppercase;
}

h2 {
width: 700px;
margin-top: 30px;
padding-bottom: 5px;
border-bottom: 1px solid #333;
}
  